<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.moneymanager.fragments.FHomePage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp">

        <android.support.v7.widget.CardView
            android:id="@+id/f_home_overview_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8sp">

                <TextView
                    android:id="@+id/f_home_overview_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Overview"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="italic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/f_home_overview_card_income_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Income"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/f_home_overview_card_income_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 1230"
                        android:textColor="@color/colorGreen"
                        android:textSize="18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/f_home_overview_card_expense_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expense"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/f_home_overview_card_expense_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 1230"
                        android:textColor="@color/colorRed"
                        android:textSize="18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/f_home_overview_card_total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/f_home_overview_card_total_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 1230"
                        android:textColor="@color/colorBlue"
                        android:textSize="18dp"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ListView
            android:id="@+id/f_home_trans_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


    <!--Add card view for overview-->

    <!--add budget card if set-->

    <!--list view to display today's transactions-->

</FrameLayout>
